<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/outdoor_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/main_color" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/run_icon_return_nol" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/cv_running_info"
        app:layout_constraintStart_toStartOf="@id/cv_running_info"
        app:srcCompat="@drawable/run_icon_local_nol" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_running_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_distance"
                    style="@style/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="44sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_topbar"
                    tools:text="6.34" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_distance_uint"
                    style="@style/textMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="7dp"
                    android:text="@string/kilometre"
                    android:textColor="@color/text_secondary_disable_color"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_distance" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_running_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_speed"
                    style="@style/textMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="4′35″"
                    android:textColor="@color/text_important_color"
                    android:textSize="@dimen/text_20sp" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/textMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    tools:text="01:02:36"
                    android:textColor="@color/text_important_color"
                    android:textSize="@dimen/text_20sp" />

                <TextView
                    android:id="@+id/tv_kcal"
                    style="@style/textMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    tools:text="435"
                    android:textColor="@color/text_important_color"
                    android:textSize="@dimen/text_20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_running_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="26dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_speed_unit"
                    style="@style/textRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pace"
                    android:textColor="@color/text_secondary_disable_color"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_time_uint"
                    style="@style/textRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/exercise_time"
                    android:textColor="@color/text_secondary_disable_color"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_kca_unit"
                    style="@style/textRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/consumption_of_kilocalories"
                    android:textColor="@color/text_secondary_disable_color"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>