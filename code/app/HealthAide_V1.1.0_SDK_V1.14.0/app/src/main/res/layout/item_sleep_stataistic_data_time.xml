<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_sleep_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4852CB"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_hour_unit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_sleep_status"
        tools:text="2" />

    <TextView
        android:id="@+id/tv_sleep_time_hour_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#919191"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
        app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_min"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_time_hour"

        android:text="@string/hour" />


    <TextView
        android:id="@+id/tv_sleep_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4852CB"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_min_unit"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_time_hour_unit"
        app:layout_constraintTop_toTopOf="@id/tv_sleep_time_hour"
        tools:text="39" />

    <TextView
        android:id="@+id/tv_sleep_time_min_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#919191"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_time_min"

        android:text="@string/minute" />


    <TextView
        android:id="@+id/tv_sleep_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#585858"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_time_hour"
        app:layout_constraintBottom_toTopOf="@id/tv_sleep_result"
        tools:text="深度睡眠" />

    <TextView
        android:id="@+id/tv_sleep_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占比45%"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_status" />


</androidx.constraintlayout.widget.ConstraintLayout>