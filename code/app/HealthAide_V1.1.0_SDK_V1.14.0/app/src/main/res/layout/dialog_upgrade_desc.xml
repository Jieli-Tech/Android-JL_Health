<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="34dp"
    android:background="@color/text_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_upgrade_desc_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_white_15_shape">

        <TextView
            android:id="@+id/tv_upgrade_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_upgrade_desc_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="新版本V_1.1.0.0" />

        <TextView
            android:id="@+id/tv_upgrade_desc_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="20dp"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_upgrade_desc_title"
            tool:text="1.优化某某功能\n\n2.升级某某资源内容" />

        <TextView
            android:id="@+id/tv_upgrade_desc_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/btn_blue_2_gray_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_upgrade_desc_line_1"
            app:layout_constraintTop_toBottomOf="@+id/view_upgrade_desc_line"
            tool:text="取消" />

        <TextView
            android:id="@+id/tv_upgrade_Desc_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="14dp"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/btn_blue_2_gray_selector"
            tool:text="升级"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_upgrade_desc_line_1"
            app:layout_constraintTop_toBottomOf="@+id/view_upgrade_desc_line"/>

        <View
            android:id="@+id/view_upgrade_desc_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_upgrade_desc_content" />

        <View
            android:id="@+id/view_upgrade_desc_line_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_upgrade_desc_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>