<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/view_topbar"
        layout="@layout/view_topbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/view_topbar" />

    <RelativeLayout

        android:id="@+id/rl_show_contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_topbar"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:text="@string/no_setting"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_15sp" />

        <Button
            android:id="@+id/btn_edit_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/text_transparent"
            android:gravity="end|center_vertical"
            android:paddingEnd="16dp"
            android:text="@string/modification"
            android:textColor="@color/blue_558CFF"
            android:textSize="@dimen/text_15sp" />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_edit_contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/view_topbar"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:text="@string/mobile"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_emergency_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_address_book"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            android:background="@color/text_transparent"
            android:gravity="end|center_vertical"
            android:hint="@string/hint_emergency_contact"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_15sp"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_emergency_contact"
            app:layout_constraintStart_toEndOf="@id/tv_contact_title"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>





    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="68dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_topbar" />


    <Button
        android:id="@+id/btn_save_contact"
        android:visibility="gone"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"
        android:layout_marginBottom="82dp"
        android:textColor="@color/gray_B3B3B3"
        android:text="@string/save_contact"
        android:background="@drawable/bg_btn_purple_gray_1_selector"
        android:layout_height="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>