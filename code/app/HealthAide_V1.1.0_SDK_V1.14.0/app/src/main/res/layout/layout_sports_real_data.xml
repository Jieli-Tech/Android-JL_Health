<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_sports_real_data_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/run_icon_speed_nol"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tv_sports_real_data_value"
        style="@style/textBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="4′35″"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_22sp" />


    <TextView
        android:id="@+id/tv_sports_real_data_title"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pace"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_14sp" />

</LinearLayout>