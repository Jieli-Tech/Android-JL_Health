<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="128dp"
    android:layout_height="wrap_content"
    android:background="@drawable/img_ai_operate_bg"
    android:paddingBottom="9dp">


    <com.jieli.healthaide.ui.widget.FocusTextView
        android:id="@+id/tv_pop_menu_copy"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_ai_copy"
        android:drawablePadding="6dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:minWidth="64dp"
        android:minHeight="62dp"
        android:paddingTop="13dp"
        android:singleLine="true"
        android:text="@string/copy"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintEnd_toStartOf="@id/tv_pop_menu_multi"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.jieli.healthaide.ui.widget.FocusTextView
        android:id="@+id/tv_pop_menu_multi"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_ai_choose"
        android:drawablePadding="6dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:minWidth="64dp"
        android:minHeight="62dp"
        android:paddingTop="13dp"
        android:singleLine="true"
        android:text="@string/multi_select"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_pop_menu_copy"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>