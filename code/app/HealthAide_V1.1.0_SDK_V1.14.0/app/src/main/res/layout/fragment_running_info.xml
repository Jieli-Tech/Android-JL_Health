<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/view_topbar"
        layout="@layout/view_topbar" />


    <com.jieli.healthaide.ui.sports.map.GpsSignalView
        android:id="@+id/gps_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:drawableEnd="@drawable/gps_signal_level_imgs"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:text="GPS"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/view_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_topbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_distance"
        style="@style/textBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        tools:text="6.34"
        android:textColor="@color/text_important_color"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_topbar" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_distance_uint"
        style="@style/textMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kilometre"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_distance" />


    <include
        app:layout_constraintTop_toBottomOf="@id/tv_distance_uint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_sports_real_data_container"
        layout="@layout/layout_sports_real_data_container" />


  <com.jieli.healthaide.ui.sports.widget.SportsControlView
      android:id="@+id/cl_sports_control"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_width="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/layout_sports_real_data_container"

      />
</androidx.constraintlayout.widget.ConstraintLayout>