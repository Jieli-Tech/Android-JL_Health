<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="PressureViewModel"
            type="com.jieli.healthaide.ui.health.pressure.PressureViewModel" />

        <variable
            name="pressureViewModel"
            type="PressureViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scrollview_sleep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff6f7f8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_health_head">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.health.sleep.SleepDataFragment">

            <View
                android:id="@+id/view_bg_top"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:background="@drawable/bg_pressure_fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.jieli.healthaide.ui.widget.CalenderSelectorView
                android:id="@+id/layout_calender_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layout_calender_selector" />

            <TextView
                android:id="@+id/tv_weight_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/daily_average"
                android:textColor="#B3ffffff"
                android:textSize="14dp"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_weight_range"
                app:layout_constraintEnd_toStartOf="@id/tv_weight_range"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_weight_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@{pressureViewModel.timeIntervalPressureValueLiveData}"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@id/tv_weight_unit"
                app:layout_constraintStart_toEndOf="@id/tv_weight_avg"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                tools:text=" 7843 " />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@{pressureViewModel.timeIntervalPressureStatusLiveData}"
                android:textColor="#B3ffffff"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_weight_range"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_weight_range"
                tools:text="@string/normal" />


            <FrameLayout
                android:id="@+id/fl_charts_parent"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_weight_range"
                tools:layout_height="180dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{pressureViewModel.timeIntervalLiveData}"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_calender_selector"
                tools:text="2月25日" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_health_detail_shape"
                app:layout_constraintBottom_toBottomOf="@id/spacer"
                app:layout_constraintTop_toBottomOf="@+id/fl_charts_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_sleep_stataistic_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_charts_parent">

                <TextView
                    android:id="@+id/tv_pressure_avg_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="24dp"
                    android:text="本周压力均值"
                    android:textColor="@color/black_585858"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pressure_avg_value" />

                <TextView
                    android:id="@+id/tv_pressure_avg_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@{pressureViewModel.averagePressureValueLiveData}"
                    android:textColor="@color/black_242424"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_pressure_avg_statu"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/tv_pressure_avg_describe"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="38" />

                <TextView
                    android:id="@+id/tv_pressure_avg_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@{pressureViewModel.averagePressureStatusLiveData}"
                    android:textColor="@color/black_242424"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_pressure_avg_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pressure_avg_describe"
                    app:layout_constraintStart_toEndOf="@+id/tv_pressure_avg_value"
                    tools:layout_editor_absoluteY="35dp"
                    tools:text="放松" />

                <TextView
                    android:id="@+id/tv_pressure_range_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@{pressureViewModel.pressureValueRangeLiveData}"
                    android:textColor="@color/black_242424"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pressure_min_max"
                    app:layout_constraintStart_toStartOf="@+id/tv_pressure_min_max"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="38-38" />

                <TextView
                    android:id="@+id/tv_pressure_min_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="40dp"
                    android:text="最小值-最大值"
                    android:textColor="@color/black_585858"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pressure_range_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_sleep_stataistic_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_average">

                <FrameLayout
                    android:id="@+id/fl_charts_pressure_proportion"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_pressure_color_tag_high"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="偏高 80-99"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_medium"
                    app:layout_constraintStart_toEndOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintTop_toTopOf="@+id/fl_charts_pressure_proportion" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_pressure_color_tag_medium"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="中等 60-79"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_normal"
                    app:layout_constraintStart_toEndOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_high" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_pressure_color_tag_normal"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="正常 30-59"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_relax"
                    app:layout_constraintStart_toEndOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_medium" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_relax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/ic_pressure_color_tag_relax"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="放松 1-29"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintStart_toEndOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_normal" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_high_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="2%"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fl_charts_pressure_proportion" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_medium_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="11%"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_high" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_normal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="70%"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_pressure_color_tag_relax"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_medium" />

                <TextView
                    android:id="@+id/tv_pressure_color_tag_relax_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="17%"
                    android:textColor="@color/black_585858"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fl_charts_pressure_proportion"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_pressure_color_tag_normal" />

                <TextView
                    android:id="@+id/tv_pressure_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="26dp"
                    android:text="适当的压力可促使人高效工作与生活。请继续保持对压力的有效调节。"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fl_charts_pressure_proportion"
                    tools:layout_editor_absoluteX="23dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_analysis"
                tools:layout_editor_absoluteX="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>