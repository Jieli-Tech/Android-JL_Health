<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <include
        android:id="@+id/layout_topbar"
        layout="@layout/view_topbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_topbar" />

    <TextView
        android:id="@+id/tv_my_data_activity_statistics"
        style="@style/textMedium"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:text="@string/activity_statistics"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_topbar" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_my_data_shape"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_data_activity_statistics"
        tools:itemCount="4"
        tools:listitem="@layout/item_mine_common" />

    <TextView
        android:id="@+id/tv_my_data_health"
        style="@style/textMedium"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:text="@string/health_state"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_activity_statistics" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_health"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_my_data_shape"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_data_health"
        tools:itemCount="4"
        tools:listitem="@layout/item_mine_common" />


</androidx.constraintlayout.widget.ConstraintLayout>