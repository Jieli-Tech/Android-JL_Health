<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scrollview_sleep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff6f7f8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_health_head">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.health.sleep.SleepDataFragment">

            <View
                android:id="@+id/view_bg_top"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:background="@drawable/bg_sleep_fragment_second"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--    <include-->
            <!--        android:id="@+id/layout_calender_selector"-->
            <!--        layout="@layout/layout_calender_selector"-->
            <!--        app:layout_constraintEnd_toEndOf="parent"-->
            <!--        app:layout_constraintStart_toStartOf="parent"-->
            <!--        android:visibility="invisible"/>-->

            <com.jieli.healthaide.ui.widget.CalenderSelectorView
                android:id="@+id/layout_calender_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layout_calender_selector" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11月04日"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_calender_selector" />

            <TextView
                android:id="@+id/tv_sleep_time_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_hour_unit"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date"
                tools:text=" 6 " />

           <Space
               android:id="@+id/space_time_hour"
               app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_sleep_time_hour_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/hour"
                android:textColor="#B3ffffff"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
                app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_min"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_time_hour" />

            <TextView
                android:id="@+id/tv_sleep_time_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
                app:layout_constraintEnd_toStartOf="@id/tv_sleep_time_min_unit"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_time_hour_unit"
                app:layout_constraintTop_toTopOf="@id/tv_sleep_time_hour"
                tools:text="39" />

            <TextView
                android:id="@+id/tv_sleep_time_min_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/minute"
                android:textColor="#B3ffffff"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_time_hour"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_time_min" />

            <FrameLayout
                android:id="@+id/fl_charts_parent"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="-20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space_time_hour"
                tools:layout_height="180dp" />

            <include
                android:id="@+id/layout_sleep_color_tap"
                layout="@layout/layout_sleep_color_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_charts_parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/bg_health_detail_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fl_charts_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sleep_statistics"
                android:layout_width="0dp"
                android:layout_height="211dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_sleep_stataistic_shape"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_sleep_color_tap"
                app:spanCount="2"
                tools:itemCount="4"
                tools:layoutManager="GridLayoutManager"
                tools:listitem="@layout/item_sleep_stataistic_data_time"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sleep_data_analysis"
                android:layout_width="0dp"
                android:layout_height="450dp"
                android:layout_margin="14dp"
                android:background="@drawable/bg_sleep_stataistic_shape"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_sleep_statistics"
                tools:itemCount="12"
                tools:listitem="@layout/item_sleep_analysis_data"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sleep_data_nap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@drawable/bg_sleep_stataistic_shape"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_sleep_data_analysis"
                tools:itemCount="12"
                tools:listitem="@layout/item_sleep_analysis_data" />

            <Space
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_sleep_data_nap"
                tools:layout_editor_absoluteX="5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>