<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    android:paddingBottom="17dp">

    <TextView
        android:id="@+id/tv_music_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="10dp"
        android:text="1"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_music_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_manager_chose_selector"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_music_index"
        app:layout_constraintStart_toStartOf="@id/tv_music_index"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="富士山下"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintStart_toEndOf="@id/tv_music_index"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_music_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="9dp"
        android:text="陈奕迅"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_music_name"
        app:layout_constraintTop_toBottomOf="@id/tv_music_name" />

    <TextView
        android:id="@+id/tv_music_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="9dp"
        android:text="2.4Mb"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_14sp"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_music_artist"
        app:layout_constraintTop_toBottomOf="@id/tv_music_name" />


</androidx.constraintlayout.widget.ConstraintLayout>