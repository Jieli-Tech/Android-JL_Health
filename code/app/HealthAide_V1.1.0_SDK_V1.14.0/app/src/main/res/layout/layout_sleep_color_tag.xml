<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/black_242424"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_sleep_color_tag_depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_sleep_color_tag_depth"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/deep_sleep"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/tv_sleep_color_tag_shallow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sleep_color_tag_shallow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_sleep_color_tag_shallow"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/light_sleep"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/tv_sleep_color_eye_move"
            app:layout_constraintStart_toEndOf="@id/tv_sleep_color_tag_depth"
            app:layout_constraintTop_toTopOf="@id/tv_sleep_color_tag_depth" />

        <TextView
            android:id="@+id/tv_sleep_color_eye_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_sleep_color_tag_eye_move"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/rapid_eye_movement"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/tv_sleep_color_awake"
            app:layout_constraintStart_toEndOf="@id/tv_sleep_color_tag_shallow"
            app:layout_constraintTop_toTopOf="@id/tv_sleep_color_tag_depth" />


        <TextView
            android:id="@+id/tv_sleep_color_awake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_sleep_color_tag_awake"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/sober"
            android:textColor="@color/white"
            android:textSize="10sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_sleep_color_eye_move"
            app:layout_constraintTop_toTopOf="@id/tv_sleep_color_tag_depth" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>