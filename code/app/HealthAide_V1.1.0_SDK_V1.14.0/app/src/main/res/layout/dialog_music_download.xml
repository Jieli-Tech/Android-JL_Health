<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="13dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="14dp">


        <TextView
            android:id="@+id/tv_music_download_transfer_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/transfer_info"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_music_download_transfer_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintEnd_toEndOf="@id/tv_music_download_transfer_count"
            app:layout_constraintTop_toTopOf="@id/tv_music_download_transfer_count" />


        <TextView
            android:id="@+id/tv_music_download_transfer_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有一种悲伤.mp3"
            android:textColor="@color/text_secondary_disable_color"
            android:textSize="11sp"

            app:layout_constraintStart_toStartOf="@id/tv_music_download_transfer_count"
            app:layout_constraintTop_toBottomOf="@id/tv_music_download_transfer_count" />


        <ProgressBar
            android:id="@+id/pb_music_download"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:max="100"
            android:maxHeight="3dp"
            android:min="0"
            android:minHeight="3dp"
            android:padding="0dp"
            android:progressDrawable="@drawable/pb_music_download"
            app:layout_constraintEnd_toEndOf="@id/tv_music_download_transfer_count"
            app:layout_constraintStart_toStartOf="@id/tv_music_download_transfer_count"
            app:layout_constraintTop_toBottomOf="@id/tv_music_download_transfer_music_title"
            tools:progress="20" />


        <TextView
            android:id="@+id/tv_music_download_transfer_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="@string/tip_downloading_music"
            android:textColor="@color/text_secondary_disable_color"
            android:textSize="14sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pb_music_download" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_music_download_finish_tip"
            android:drawableTop="@drawable/ic_success_green"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/tip_download_finished"
            android:textColor="@color/text_important_color"
            android:textSize="16sp"

            android:gravity="center_horizontal|top"
            android:visibility="invisible"
            android:drawablePadding="6dp"
            android:background="@color/content_color"
            app:layout_constraintBottom_toTopOf="@id/view_music_download_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <View
            android:id="@+id/view_music_download_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"

            android:background="@color/line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_music_download_transfer_tip" />

        <Button
            android:id="@+id/btn_cancel_music_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:padding="12dp"
            android:text="@string/cancel"
            app:textAllCaps="false"
            android:textColor="@color/text_important_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_music_download_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>