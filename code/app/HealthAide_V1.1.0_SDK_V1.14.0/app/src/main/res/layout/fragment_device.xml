<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_device_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"

    tools:context=".ui.device.DeviceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_device_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_device_history_list"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:clipChildren="false"
            android:layerType="software"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_device_head"
                android:layout_width="18dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:src="@drawable/bg_device_head_shape"
                android:background="@drawable/bg_device_head_shape" />

            <ImageView
                android:id="@+id/iv_device_end"
                android:layout_width="18dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bg_device_end_shape"
                android:background="@drawable/bg_device_end_shape"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/rv_device_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/iv_device_end"
                android:layout_toEndOf="@+id/iv_device_head"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_device_watch_market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/rl_device_history_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_device_watch_market_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/watch_market_all"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/text_secondary_disable_color"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_device_watch_market"
                app:drawableEndCompat="@drawable/ic_right_arrow" />

            <TextView
                style="@style/textMedium"
                android:id="@+id/tv_device_watch_market"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:text="@string/watch_dial"
                android:textColor="@color/text_important_color"
                android:textSize="@dimen/text_16sp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_device_watch_market_all"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_device_watch_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="10dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                tools:itemCount="1"
                tools:listitem="@layout/item_watch"
                app:layout_constraintTop_toBottomOf="@+id/tv_device_watch_market"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_device_func"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_device_watch_market">

            <androidx.recyclerview.widget.RecyclerView
                android:paddingBottom="16dp"
                android:id="@+id/rv_device_func_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>