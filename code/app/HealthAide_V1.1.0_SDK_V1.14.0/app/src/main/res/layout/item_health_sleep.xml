<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:background="@drawable/bg_health_item_shape">

    <TextView
        android:id="@+id/tv_min_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/min"
        android:textColor="@color/gray_9E9E9E"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_hour_value"
        app:layout_constraintBottom_toBottomOf="@+id/tv_min_value"
        app:layout_constraintStart_toEndOf="@+id/tv_min_value"
        app:layout_constraintTop_toTopOf="@+id/tv_min_value" />

    <TextView
        android:id="@+id/tv_min_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="-"
        android:textColor="@color/black_242424"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hour_value"
        app:layout_constraintStart_toEndOf="@+id/tv_hour_unit"
        app:layout_constraintTop_toTopOf="@+id/tv_hour_value" />

    <ImageView
        android:id="@+id/iv_health_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_health_sleep" />

    <TextView
        android:id="@+id/tv_health_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/sleep"
        android:textColor="@color/black_242424"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_health_logo"
        app:layout_constraintStart_toEndOf="@+id/iv_health_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_health_logo" />

    <TextView
        android:id="@+id/tv_health_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="-月-日"
        android:textColor="@color/text_secondary_disable_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_health_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_health_logo" />

    <TextView
        android:id="@+id/tv_hour_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:text="-"
        android:textColor="@color/black_242424"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/iv_health_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_health_logo" />

    <TextView
        android:id="@+id/tv_hour_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/hour"
        android:textColor="@color/gray_9E9E9E"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_hour_value"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hour_value"
        app:layout_constraintStart_toEndOf="@+id/tv_hour_value"
        app:layout_constraintTop_toTopOf="@+id/tv_hour_value" />

    <ImageView
        android:id="@+id/chart_preview_sleep"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hour_value" />

    <TextView
        android:id="@+id/tv_health_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="@string/today_empty_data"
        android:textColor="@color/black_242424"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/iv_health_logo"
        app:layout_constraintTop_toBottomOf="@+id/chart_preview_sleep" />
</androidx.constraintlayout.widget.ConstraintLayout>