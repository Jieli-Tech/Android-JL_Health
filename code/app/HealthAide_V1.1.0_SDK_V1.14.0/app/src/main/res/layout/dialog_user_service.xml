<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/bg_user_service_shape"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_user_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        tool:text="@string/declaration"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_user_service_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:maxHeight="360dp"
        android:lineSpacingExtra="5dp"
        android:textColor="#585858"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_service_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_service_agree"/>

    <TextView
        android:id="@+id/tv_user_service_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree_and_use"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_16sp"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_user_service_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_service_content"/>


    <TextView
        android:id="@+id/tv_user_service_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_agree_and_exit"
        android:padding="4dp"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_user_service_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_service_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_user_service_line"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toTopOf="@+id/tv_user_service_agree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>