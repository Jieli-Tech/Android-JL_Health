<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="34dp"
    android:background="@color/text_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_update_resource_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_white_15_shape"
        android:padding="28dp">

        <TextView
            android:id="@+id/tv_update_res_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="33%"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_update_res_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tool:text="正在传输表盘资源（8/24）"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_update_res_progress"/>

        <TextView
            android:id="@+id/tv_update_res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tool:text="资源1"
            android:textSize="@dimen/text_10sp"
            android:textColor="@color/text_secondary_disable_color"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_res_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <ProgressBar
            android:id="@+id/pb_update_res_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:progressDrawable="@drawable/bg_seek_bar_drawable"
            tool:progress="33"
            android:max="100"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_res_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_update_res_tips"/>

        <TextView
            android:id="@+id/tv_update_res_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_warning"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_update_res_progress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>