<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_dialog_chose_date_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/start_time"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wheelview_date_chose_year"
            android:layout_width="0dp"
            android:minHeight="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@id/wheelview_date_chose_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_chose_date_title" />


        <com.contrarywind.view.WheelView
            android:id="@+id/wheelview_date_chose_day"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/wheelview_date_chose_year"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_chose_date_title" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn_number_chose_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:text="@string/cancel"
            app:textAllCaps="false"
            android:textColor="@color/auxiliary_widget"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wheelview_date_chose_year" />

        <Button
            android:id="@+id/btn_number_chose_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:text="@string/sure"
            app:textAllCaps="false"
            android:textColor="@color/auxiliary_widget"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wheelview_date_chose_year" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>