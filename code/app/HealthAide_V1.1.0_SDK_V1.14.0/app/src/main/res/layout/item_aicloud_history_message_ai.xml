<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/tv_aicloud_msg_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff919191"
        android:textSize="@dimen/text_14sp"
        android:visibility="gone"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="6-13 11:40"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_aicloud_logo_ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_ai_photo"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_aicloud_msg_user_time"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_aicloud_msg_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_aicloud_logo_ai"
        app:layout_constraintTop_toTopOf="@id/img_aicloud_logo_ai"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/fl_aicloud_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_aicloud_message_ai_gray_shape_nol"
            android:paddingHorizontal="16dp"
            android:paddingVertical="11dp">

            <TextView
                android:id="@+id/tv_aicloud_msg_ai_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff242424"
                android:textSize="16sp"
                tools:text="珠海香洲明天阵雨转多云，出门记得带伞，28度到35度，西南风2级转西南风3级，空气质量良好" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>