<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:fitsSystemWindows="true">

    <include
        android:id="@+id/view_topbar"
        layout="@layout/view_topbar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_region_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
         app:endIconDrawable="@drawable/ic_clear_text"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_topbar">


        <TextView
            android:id="@+id/tv_region_cancel_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:visibility="gone"
            android:text="@string/cancel"
            android:textColor="@color/auxiliary_widget"
            android:textSize="@dimen/text_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_region_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="14dp"

            android:background="@drawable/bg_et_white_shape"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:paddingStart="11dp"

            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_region_cancel_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_clear_region_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="13dp"
            android:paddingTop="6dp"
            android:paddingEnd="13dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:src="@drawable/ic_delete_gray"
            app:layout_constraintBottom_toBottomOf="@id/et_region_search"
            app:layout_constraintEnd_toEndOf="@id/et_region_search"
            app:layout_constraintTop_toTopOf="@id/et_region_search" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_region_chose"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_region_search"
        tools:itemCount="30"
        tools:listitem="@layout/item_phone_region_chose" />

    <com.jieli.healthaide.ui.device.contact.AlphaIndexView
        android:id="@+id/aiv_region"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_marginBottom="80dp"
        android:fitsSystemWindows="false"
        app:layout_constraintBottom_toBottomOf="@id/rl_region_chose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_region_chose" />
</androidx.constraintlayout.widget.ConstraintLayout>