<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_sleep_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4852CB"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@id/tv_sleep_score_unit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <TextView
        android:id="@+id/tv_sleep_score_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#919191"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_score"

        android:text="@string/score" />




    <TextView
        android:id="@+id/tv_sleep_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#585858"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_score"
        tools:text="深度睡眠" />

    <TextView
        android:id="@+id/tv_sleep_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_status"
        android:text="占比45%" />


</androidx.constraintlayout.widget.ConstraintLayout>