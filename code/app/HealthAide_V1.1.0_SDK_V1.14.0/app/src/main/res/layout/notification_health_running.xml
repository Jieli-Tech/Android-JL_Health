<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:background="@color/red_D25454">


    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_logo" />

    <LinearLayout
        android:id="@+id/ll_run_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_run_time"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            tools:text="01:05:33" />

        <TextView
            android:id="@+id/tv_run_time_tip"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:text="@string/exercise_time" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_run_distance"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_run_distance"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            tools:text="0.00" />

        <TextView
            android:id="@+id/tv_run_distance_tip"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/black_333333"
            android:text="@string/kilometre" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_run_pace"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_run_pace"
            android:textSize="@dimen/text_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            tools:text="04'05''" />

        <TextView
            android:id="@+id/tv_run_pace_tip"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:text="@string/pace" />
    </LinearLayout>
</LinearLayout>