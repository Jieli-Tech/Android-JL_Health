<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/view_topbar"
        layout="@layout/view_topbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_topbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <com.jieli.healthaide.ui.sports.widget.NestMap
                android:id="@+id/map_running_detail"
                android:layout_width="0dp"
                android:layout_height="425dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/red_D25454" />


            <!--  基本信息 -->

            <View
                android:id="@+id/view_running_info"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_running_info"
                app:layout_constraintBottom_toBottomOf="@id/include_sports_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_running_avatar"
                app:layout_goneMarginEnd="12dp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_running_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="357dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/map_running_detail"
                app:layout_goneMarginTop="12dp"
                app:srcCompat="@drawable/ic_userinfo_avatar_man" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_name"
                style="@style/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="6dp"
                android:paddingBottom="2dp"
                android:text="@string/km"
                android:textColor="@color/text_important_color"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/tv_date"
                app:layout_constraintStart_toEndOf="@id/iv_running_avatar"
                app:layout_constraintTop_toTopOf="@id/iv_running_avatar"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="爱运动的胖子" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="6dp"
                android:paddingBottom="2dp"
                android:text="2021/10/ 12:00"
                android:textColor="@color/text_secondary_disable_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_running_avatar"
                app:layout_constraintStart_toEndOf="@id/iv_running_avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                tools:text="2021/4/6 07:10" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_distance_uint"
                style="@style/textRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="4dp"
                android:paddingEnd="28dp"
                android:paddingBottom="4dp"
                android:text="@string/km"
                android:textColor="@color/text_important_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_distance"

                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_distance"
                style="@style/textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.34"
                android:textColor="@color/text_important_color"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_running_avatar"
                app:layout_constraintEnd_toStartOf="@id/tv_distance_uint"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/iv_running_avatar" />


            <View

                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/line_color"
                app:layout_constraintEnd_toEndOf="@id/view_running_info"
                app:layout_constraintStart_toStartOf="@id/view_running_info"
                app:layout_constraintTop_toBottomOf="@id/iv_running_avatar" />


            <!--  总结信息-->


            <!-- 配速-->


            <include
                android:id="@+id/include_sports_detail"
                layout="@layout/layout_sports_detail_info_container"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginTop="12dp"
                android:paddingBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_running_avatar"
                tools:itemCount="6" />

            <com.jieli.healthaide.ui.sports.widget.PaceView
                android:id="@+id/paceview_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_running_info"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_running_info" />


            <!--  步频信息 -->
            <include

                android:id="@+id/layout_step_freq"
                layout="@layout/item_sports_detail_line_chart"
                android:layout_width="0dp"
                android:layout_height="340dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_running_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paceview_info" />


            <!--  心率信息 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_running_info"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_step_freq">


                <include
                    android:id="@+id/layout_heart_rate"
                    layout="@layout/item_sports_detail_line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_marginBottom="24dp" />


                <include
                    android:id="@+id/sports_detail_sport_status_5"
                    layout="@layout/item_sports_detail_sport_status" />

                <include
                    android:id="@+id/sports_detail_sport_status_4"
                    layout="@layout/item_sports_detail_sport_status" />

                <include
                    android:id="@+id/sports_detail_sport_status_3"
                    layout="@layout/item_sports_detail_sport_status" />

                <include
                    android:id="@+id/sports_detail_sport_status_2"
                    layout="@layout/item_sports_detail_sport_status" />

                <include
                    android:id="@+id/sports_detail_sport_status_1"
                    layout="@layout/item_sports_detail_sport_status" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>