<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.device.market.DialDetailFragment">

    <ProgressBar
        android:id="@+id/pb_dial_detail"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="100"
        android:maxHeight="48dp"
        android:minHeight="48dp"
        android:progress="20"
        android:progressDrawable="@drawable/progress_purple"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btn_dial_detail_state"
        app:layout_constraintStart_toStartOf="@+id/btn_dial_detail_state"
        app:layout_constraintTop_toTopOf="@+id/btn_dial_detail_state"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/sv_dial_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/btn_dial_detail_state"
        app:layout_constraintTop_toBottomOf="@+id/view_dial_detail_topbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dial_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/gray_4B4B4B"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_dial_line"
                app:layout_constraintVertical_weight="1"
                tools:text="【表盘简介】：机械之芯表盘支持显示步数、日期、血氧、星期信息。其中机械之芯表盘包含了6个主题。点击全盘可实现快捷跳转、多彩颜色体验多种风格。" />

            <View
                android:id="@+id/view_dial_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/gray_EAEAEA"
                app:layout_constraintBottom_toTopOf="@id/tv_dial_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_dial_message" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dial_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="3">

                <ImageView
                    android:id="@+id/iv_product_img"
                    android:layout_width="254dp"
                    android:layout_height="254dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/bg_watch_round"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dial_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_dial_img"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_product_img"
                    app:layout_constraintEnd_toEndOf="@+id/iv_product_img"
                    app:layout_constraintStart_toStartOf="@+id/iv_product_img"
                    app:layout_constraintTop_toTopOf="@+id/iv_product_img"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_watch_6" />

                <TextView
                    android:id="@+id/tv_dial_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/blue_558CFF"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dial_name"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="￥9.00" />

                <TextView
                    android:id="@+id/tv_dial_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="@color/black_242424"
                    android:textSize="@dimen/text_20sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dial_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_product_img"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="机械之芯" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btn_dial_detail_state"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_purple_2_gray_selector"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintTop_toBottomOf="@+id/sv_dial_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@color/text_transparent"
        tools:text="下载中 20%" />

    <include
        android:id="@+id/view_dial_detail_topbar"
        layout="@layout/view_topbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>