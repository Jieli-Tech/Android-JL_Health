<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/text_14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_area_line"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/gray_EFEFEF"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_area_code"
            app:layout_constraintStart_toEndOf="@+id/tv_area_code"
            app:layout_constraintBottom_toBottomOf="@+id/tv_area_code"/>

        <ImageView
            android:id="@+id/iv_clear_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_text"
            android:padding="3dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            tools:visibility="visible"/>

        <EditText
            android:id="@+id/et_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_phone_number_or_email"
            android:background="@color/text_transparent"
            android:textSize="@dimen/text_14sp"
            android:inputType="text"
            android:textColor="@color/black_242424"
            android:textColorHint="@color/gray_B3B3B3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_area_line"
            app:layout_constraintEnd_toStartOf="@+id/iv_clear_account"
            tools:ignore="Autofill,TextFields"/>

        <View
            android:id="@+id/view_account_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_F7F7F7"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_area_code, view_area_line"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_account">

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_14sp"
            android:text="@string/send_sms_code"
            android:textColor="@color/main_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/view_send_line"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/gray_EFEFEF"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_send_code"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_clear_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_clear_text"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_send_line"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            tools:visibility="visible"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:textSize="@dimen/text_14sp"
            android:layout_marginEnd="6dp"
            android:inputType="number"
            android:hint="@string/input_verification_code"
            android:textColorHint="@color/gray_B3B3B3"
            android:textColor="@color/black_242424"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_clear_code"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="Autofill,TextFields" />

        <View
            android:id="@+id/view_code_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_F7F7F7"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>