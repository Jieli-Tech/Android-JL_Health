<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_item_user_msg_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tool:text="请输入"
        android:textSize="@dimen/text_13sp"
        android:textColor="@color/text_secondary_disable_color"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableEndCompat="@drawable/ic_right_arrow" />

    <ImageView
        android:id="@+id/iv_item_user_msg_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_user_msg_value"/>

    <TextView
        android:id="@+id/tv_item_user_msg_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_15sp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        tool:text="昵称"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_user_msg_img"/>



</androidx.constraintlayout.widget.ConstraintLayout>