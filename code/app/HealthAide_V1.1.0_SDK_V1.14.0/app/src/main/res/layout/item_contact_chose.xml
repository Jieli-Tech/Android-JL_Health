<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_contact_chose_root"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="@drawable/bg_card_white_shape"
    android:paddingStart="14dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="38dp"
    >

    <ImageView
        android:id="@+id/iv_contact_avatar"
        android:layout_width="38dp"
        android:src="@drawable/ic_contact_default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"
        android:layout_height="38dp"/>

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_contact_type"
        app:layout_constraintStart_toEndOf="@id/iv_contact_avatar"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/unnamed" />

    <TextView
        android:id="@+id/tv_contact_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_contact_name"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_name"
        android:text="手机" />

    <TextView
        android:id="@+id/tv_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_contact_type"
        app:layout_constraintStart_toEndOf="@id/tv_contact_type"
        app:layout_constraintTop_toTopOf="@id/tv_contact_type"
        tools:text="@string/unnamed" />

    <View
        android:id="@+id/view_line_contact"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line_color"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_contact_name" />


    <ImageView
        android:id="@+id/iv_contact_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_manager_chose_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>