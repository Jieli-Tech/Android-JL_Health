<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="7dp"
    android:paddingTop="2dp"
    android:paddingEnd="7dp"
    android:background="@drawable/bg_sleep_day_marker_view_shape"

    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/tv_sleep_marker_view_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="清醒39分钟" />

    <TextView
        android:id="@+id/tv_sleep_marker_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sleep_marker_view_min"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="01:36-02:15" />


</RelativeLayout>