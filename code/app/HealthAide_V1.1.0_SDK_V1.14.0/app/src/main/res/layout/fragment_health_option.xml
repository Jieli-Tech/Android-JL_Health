<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.device.health.HealthOptionFragment">

        <include
            android:id="@+id/view_topbar"
            layout="@layout/view_topbar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray_f5f5f5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_topbar" />

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@string/user_info"
            android:textColor="@color/text_important_color"
            android:textSize="@dimen/text_15sp"
            android:drawableEnd="@mipmap/ic_next_gray"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="@id/view_topbar"
            app:layout_constraintTop_toBottomOf="@id/view_topbar" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_health_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_person_info"
            tools:itemCount="5"
            tools:listitem="@layout/item_health_option" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>