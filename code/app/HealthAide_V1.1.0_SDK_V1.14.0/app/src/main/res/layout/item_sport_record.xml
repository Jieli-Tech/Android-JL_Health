<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bg_sport_record_item_white_shape"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="22dp"
    android:paddingBottom="14dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sports_record_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/record_icon_indoor_nol" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_date"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="2021/02/03\t11:00"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toEndOf="@id/iv_sports_record_map"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_type"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:background="@drawable/bg_purple_strock_round_shape"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/outdoor"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_distance"
        style="@style/textMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="6.7"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_20sp"
        app:layout_constraintStart_toStartOf="@id/tv_sport_record_date"
        app:layout_constraintTop_toBottomOf="@id/tv_sport_record_date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_distance_unit"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingBottom="6dp"
        android:text="@string/kilometre"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sport_record_distance"
        app:layout_constraintStart_toEndOf="@id/tv_sport_record_distance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_take_time"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/run_icon_time"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:text="00:36:56"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toStartOf="@id/tv_sport_record_date"
        app:layout_constraintTop_toBottomOf="@id/tv_sport_record_distance" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_pace"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:drawableStart="@drawable/run_icon_speed"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:text="15'32''"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toEndOf="@id/tv_sport_record_take_time"
        app:layout_constraintTop_toBottomOf="@id/tv_sport_record_distance" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sport_record_kcal"
        style="@style/textRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:drawableStart="@drawable/run_icon_kcal"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:text="691"
        android:textColor="@color/text_secondary_disable_color"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintStart_toEndOf="@id/tv_sport_record_pace"
        app:layout_constraintTop_toBottomOf="@id/tv_sport_record_distance" />


</androidx.constraintlayout.widget.ConstraintLayout>