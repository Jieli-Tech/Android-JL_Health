<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="Fragment"
            type="com.jieli.healthaide.ui.device.nfc.fragment.NFCCardSettingFragment" />

        <variable
            name="fragment"
            type="Fragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.device.nfc.fragment.NFCCardSettingFragment">

        <!-- TODO: Update blank fragment layout -->
        <include
            android:id="@+id/view_topbar"
            layout="@layout/view_topbar" />

        <View
            android:id="@+id/view_gray"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_color"
            app:layout_constraintTop_toBottomOf="@+id/view_topbar" />

        <include
            android:id="@+id/layout_card"
            layout="@layout/item_nfc_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/view_gray" />

        <RadioGroup
            android:id="@+id/rg_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_card">

            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/btn_bg_gray_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/home"
                android:textColor="@color/text_black_2_white_check_selector"
                android:textSize="@dimen/text_14sp" />

            <RadioButton
                android:id="@+id/rb_company"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/btn_bg_gray_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/company"
                android:textColor="@color/text_black_2_white_check_selector"
                android:textSize="@dimen/text_14sp" />

            <RadioButton
                android:id="@+id/rb_unit"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_bg_gray_blue_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/unit"
                android:textColor="@color/text_black_2_white_check_selector"
                android:textSize="@dimen/text_14sp" />
        </RadioGroup>

        <View
            android:id="@+id/view_gray1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="30dp"
            android:background="@color/bg_color"
            app:layout_constraintTop_toBottomOf="@+id/rg_card_type" />

        <TextView
            android:id="@+id/tv_nfc_setting_door_key_name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="@string/door_key_name"
            android:textColor="@color/text_important_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_gray1" />

        <EditText
            android:id="@+id/et_nfc_setting_door_key_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:textColor="@color/text_secondary_color"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nfc_setting_door_key_name_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_nfc_setting_door_key_name_tip"
            tools:ignore="Autofill"
            tools:text="家-幸福家园" />

        <View
            android:id="@+id/line_door_key_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:background="@color/line_color"
            app:layout_constraintEnd_toEndOf="@+id/et_nfc_setting_door_key_name"
            app:layout_constraintStart_toStartOf="@+id/et_nfc_setting_door_key_name"
            app:layout_constraintTop_toBottomOf="@id/et_nfc_setting_door_key_name" />

        <TextView
            android:id="@+id/tv_nfc_setting_finish"
            android:layout_width="218dp"
            android:layout_height="48dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/btn_gray_shape"
            android:gravity="center"
            android:onClick="@{()->fragment.saveNfcMsg()}"
            android:text="@string/finish"
            android:textColor="@color/auxiliary_widget"
            android:textSize="@dimen/text_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_door_key_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>