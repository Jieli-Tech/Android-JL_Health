<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_sports_real_data_mode"
        style="@style/textMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="26dp"
        android:text="@string/real_sports_status_0"
        android:textColor="@color/text_important_color"
        android:textSize="@dimen/sp_14"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/dot_sports_status_dot_0" />

    <include
        android:id="@+id/layout_sports_real_data_pace"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/layout_sports_real_data_duration"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sports_real_data_mode" />

    <include
        android:id="@+id/layout_sports_real_data_duration"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/layout_sports_real_data_kcal"
        app:layout_constraintStart_toEndOf="@id/layout_sports_real_data_pace"
        app:layout_constraintTop_toTopOf="@id/layout_sports_real_data_pace" />

    <include
        android:id="@+id/layout_sports_real_data_kcal"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_sports_real_data_duration"
        app:layout_constraintTop_toTopOf="@id/layout_sports_real_data_pace" />


    <include
        android:id="@+id/layout_sports_real_data_heart_rate"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/layout_sports_real_data_step"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_sports_real_data_pace" />

    <include
        android:id="@+id/layout_sports_real_data_step"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/layout_sports_real_data_stride"
        app:layout_constraintStart_toEndOf="@id/layout_sports_real_data_heart_rate"
        app:layout_constraintTop_toTopOf="@id/layout_sports_real_data_heart_rate" />

    <include
        android:id="@+id/layout_sports_real_data_stride"
        layout="@layout/layout_sports_real_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_sports_real_data_step"
        app:layout_constraintTop_toTopOf="@id/layout_sports_real_data_heart_rate" />
</androidx.constraintlayout.widget.ConstraintLayout>