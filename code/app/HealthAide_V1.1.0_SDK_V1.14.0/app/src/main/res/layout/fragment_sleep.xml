<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sleep_fragment_first"
    android:fitsSystemWindows="true"
    tools:context=".ui.health.HealthDetailHeadFragment">


    <View
        android:id="@+id/view_bg_top1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_sleep_fragment_first"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="@id/layout_health_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/layout_health_head"
        layout="@layout/layout_health_detail_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_sleep"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_health_head"
        tools:layout="@layout/fragment_sleep_data" />

    <include
        layout="@layout/fragment_sleep_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/nested_scrollview_sleep"
        app:layout_constraintEnd_toEndOf="@id/nested_scrollview_sleep"
        app:layout_constraintStart_toStartOf="@id/nested_scrollview_sleep"
        app:layout_constraintTop_toTopOf="@id/nested_scrollview_sleep"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>