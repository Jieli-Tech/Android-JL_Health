<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/iv_nap_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_nap_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_nap_type"
        tools:src="@drawable/sleep_nap" />

    <TextView
        android:id="@+id/tv_nap_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black_242424"
        android:textSize="@dimen/text_15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_nap_type"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp"
        tools:text="零星小睡" />

    <TextView
        android:id="@+id/tv_nap_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/gray_9E9E9E"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_nap_type"
        app:layout_constraintEnd_toStartOf="@id/tv_nap_duration"
        app:layout_constraintTop_toTopOf="@id/tv_nap_type"
        tools:text="12:00-12:45" />

    <TextView
        android:id="@+id/tv_nap_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_9E9E9E"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_nap_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_nap_type"
        tools:text="1 小时 5分" />
</androidx.constraintlayout.widget.ConstraintLayout>