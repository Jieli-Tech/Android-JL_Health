<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.mine.MyTargetFragment">

    <include
        android:id="@+id/layout_topbar"
        layout="@layout/view_topbar" />
    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_topbar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-114dp" />

    <TextView
        android:id="@+id/tv_target_step_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="@string/target_step"
        android:textColor="@color/black_585858"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_topbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_target_step"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_card_white_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_target_step_tip">

        <TextView
            android:id="@+id/tv_target_step_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/black_242424"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/tv_consume"
            app:layout_constraintEnd_toStartOf="@id/tv_target_step_unit"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10000" />

        <TextView
            android:id="@+id/tv_target_step_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/step"
            android:textColor="@color/gray_9E9E9E"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_target_step_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_target_step_value" />

        <TextView
            android:id="@+id/tv_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消耗约290千卡"
            app:layout_constraintBottom_toTopOf="@id/scale_view_step"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_target_step_value" />

        <com.jieli.healthaide.ui.widget.rulerview.RulerView
            android:id="@+id/scale_view_step"
            android:layout_width="310dp"
            android:layout_height="62dp"
            app:rulerViewWidth="310dp"
            app:intervalValue="10000"
            app:bigScaleIntervalValue="20000"
            android:layout_marginBottom="23dp"
            app:bigScaleColor="@color/gray_D8D8D8"
            app:maxValue="200000"
            app:minValue="20000"
            app:bigScaleHeight="23dp"
            app:bigScaleLineWidth="2dp"
            app:allScaleHeight="43dp"
            app:bigScaleMarginTop="17dp"
            app:intervalDistance="28dp"
            app:horizontalLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_consume"
            app:pointerHeight="43dp"
            app:selectedSrcImages="@drawable/ic_scale_pointer_step"
            app:smallScaleColor="@color/gray_D8D8D8"
            app:smallScaleHeight="6dp"
            app:smallScaleLineWidth="2dp"
            app:smallScaleMarginTop="17dp"
            app:textAndScaleMargin="0dp"
            app:textColor="@color/gray_B4BBB8"
            app:textSize="13sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_target_weight_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="9dp"
        android:text="@string/target_weight"
        android:textColor="@color/black_585858"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintBottom_toTopOf="@+id/ll_target_weight"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_target_weight"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_card_white_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_target_step">

        <TextView
            android:id="@+id/tv_target_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="63.8"
            android:textColor="@color/black_242424"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/scale_view_weight"
            app:layout_constraintEnd_toStartOf="@id/tv_target_weight_unit"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_target_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_kg"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_target_weight_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_target_weight_value" />

        <com.jieli.healthaide.ui.widget.rulerview.RulerView
            android:id="@+id/scale_view_weight"
            android:layout_width="310dp"
            android:layout_height="81dp"
            android:layout_marginBottom="14dp"
            app:bigScaleColor="@color/gray_D8D8D8"
            app:bigScaleHeight="43dp"
            app:rulerViewWidth="310dp"
            app:bigScaleLineWidth="2dp"
            app:bigScaleMarginTop="18dp"
            app:intervalDistance="8dp"
            app:intervalValue="1"
            app:allScaleHeight="66dp"
            app:bigScaleIntervalValue="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_target_weight_value"
            app:maxValue="2500"
            app:minValue="100"
            app:pointerHeight="66dp"
            app:smallScaleColor="@color/gray_D8D8D8"
            app:smallScaleHeight="28dp"
            app:smallScaleLineWidth="2dp"
            app:smallScaleMarginTop="18dp"
            app:textAndScaleMargin="0dp"
            app:textColor="@color/gray_B4BBB8"
            app:textSize="13sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
