<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    tools:background="@drawable/bg_weight_fragment">

    <ProgressBar
        android:id="@+id/progress_bar_weight"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        tools:progress="40"
        android:layout_marginEnd="20dp"
        android:progressDrawable="@drawable/bg_progress_bar_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_weight_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/weight_start_data"
        android:textColor="@color/white_light_b3"
        app:layout_constraintStart_toStartOf="@+id/progress_bar_weight"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_weight" />

    <TextView
        android:id="@+id/tv_weight_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/weight_target_data"
        android:textColor="@color/white_light_b3"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar_weight"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>