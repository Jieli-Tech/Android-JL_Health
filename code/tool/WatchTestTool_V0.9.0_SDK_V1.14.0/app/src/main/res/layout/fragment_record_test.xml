<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.record.RecordTestFragment">

    <TextView
        android:id="@+id/tv_record_logcat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/white_EEEEEE"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_record"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/iv_record_clear_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:alpha="0.8"
        android:padding="4dp"
        android:src="@drawable/ic_clear_red"
        app:layout_constraintEnd_toEndOf="@+id/tv_record_logcat"
        app:layout_constraintTop_toTopOf="@+id/tv_record_logcat"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_save_file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintStart_toStartOf="@+id/switch_save_file"
        app:layout_constraintTop_toBottomOf="@+id/switch_save_file"
        tools:text="保存文件路径: /Android/data/files/" />

    <RadioGroup
        android:id="@+id/rg_audio_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_file_path"
        app:layout_constraintStart_toStartOf="@+id/switch_save_file"
        app:layout_constraintEnd_toEndOf="@+id/switch_save_file">

        <RadioButton
            android:id="@+id/rbtn_pcm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PCM"/>

        <RadioButton
            android:id="@+id/rbtn_speex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SPEEX"
            android:visibility="visible"/>

        <RadioButton
            android:id="@+id/rbtn_opus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="OPUS"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_audio_type"
        tools:text="开始录音"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_decode_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_record_topbar"
        android:text="是否解码音频数据" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_save_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_decode_audio"
        android:text="是否保存裸数据文件" />


    <include
        android:id="@+id/cl_record_topbar"
        layout="@layout/view_topbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>