<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_log"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_cmd_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clean_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空log" />


        <Button
            android:id="@+id/btn_send_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送天气数据"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mask:0x" />

        <EditText
            android:id="@+id/et_mask"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subMask:0x" />

        <EditText
            android:id="@+id/et_sub_mask"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="01" />

        <Button
            android:id="@+id/btn_get_health_cmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="读取健康数据"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type mask:0x" />

        <EditText
            android:id="@+id/et_sensor_type"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:text="01" />


        <Button
            android:id="@+id/btn_get_sensor_cmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取传感器log"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mask:0x" />

        <EditText
            android:id="@+id/et_health_setting_mask"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="0200" />

        <Button
            android:id="@+id/btn_get_health_setting_cmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="读取健康设备设置数据"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ltv数组" />

        <EditText
            android:id="@+id/et_health_setting_ltv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0A090000000007E50A0C00" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_set_health_setting_cmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dp"
        android:text="设置健康设备设置数据"
        android:textSize="14sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_exercise"
            android:layout_width="wrap_content"
            android:entries="@array/exercise_cmds"
            android:layout_height="42dp"/>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="op+param:0x" />-->

<!--        <EditText-->
<!--            android:id="@+id/et_exercise_info_status"-->
<!--            android:layout_width="80dp"-->
<!--            android:gravity="center"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="00" />-->

        <Button
            android:id="@+id/btn_exercise_cmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="发送运动信息状态同步命令"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>