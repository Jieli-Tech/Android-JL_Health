<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_message_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_message_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp"
                    android:text="@string/app_package_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_message_app_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textColor="@color/blue_558CFF"
                    android:textSize="@dimen/text_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_message_app"
                    app:layout_constraintStart_toEndOf="@+id/tv_message_app"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="com.tencent.mm"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_message_app_value"
                    app:layout_constraintStart_toStartOf="@+id/tv_message_app_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_message_app_value"/>

                <TextView
                    android:id="@+id/tv_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp"
                    android:text="@string/message_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_message_app"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_message_title_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textColor="@color/blue_558CFF"
                    android:textSize="@dimen/text_14sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_message_title"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_message_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="Autofill,LabelFor"
                    tools:text="微信通知: 帅小伙"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_message_title_value"
                    app:layout_constraintStart_toStartOf="@+id/tv_message_title_value"
                    app:layout_constraintEnd_toEndOf="@+id/tv_message_title_value"/>

                <TextView
                    android:id="@+id/tv_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp"
                    android:text="@string/message_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_message_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/blue_558CFF"
                    android:textSize="@dimen/text_14sp"
                    app:layout_constraintTop_toTopOf="@+id/tv_message_content"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_message_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="2023-01-31 11:00:30"/>

                <TextView
                    android:id="@+id/tv_message_content_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="8dp"
                    android:textColor="@color/blue_558CFF"
                    android:textSize="@dimen/text_14sp"
                    android:background="@drawable/bg_round_6_line_shape"
                    app:layout_constraintTop_toBottomOf="@+id/tv_message_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Hi~今天有空吗？想请你吃饭!"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_message_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_send_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_retract_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_retract_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_send_btn"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_delete_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete_red"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_retract_btn"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>