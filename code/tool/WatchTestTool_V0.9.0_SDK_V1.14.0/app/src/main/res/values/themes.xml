<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WatchTestTool" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rbtn_upgarde_file">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:drawableEnd">@drawable/bg_check_flag_selector</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">#434343</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:text">file</item>
    </style>

    <style name="BackgroundCardView" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_blue_gray_8_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>